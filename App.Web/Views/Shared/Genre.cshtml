@model List<App.Web.Lib.Data.Models.MovieGenre>

@{
    var display = "";
    for (int i = 0; i < 3 && i < Model.Count; i++)
    {
        display += Model[i].Genre.Name + ", ";
    }
    if (display.Contains(","))
    {
        display = display.Remove(display.LastIndexOf(","));
    }
    if (Model.Count > 3)
    {
        display = display + ", " + (Model.Count - 3).ToString() + " more.";
    }
}

<span>@display</span>