@model IEnumerable<App.Web.Lib.ViewModels.UserVm.Index>
@{
    ViewBag.Title = "Application Users";
}
<div class="page-container">
    <div class="container-fluid">
        <div class="body-content">
            @Html.Partial("_Alert")
            <div class="well well-sm clearfix">
                <p class="pull-left page-title">@ViewBag.Title</p>
                <p class="pull-right page-info">@*empty*@</p>
            </div>
            @*--------------------------------------------------*@
            @*begin: main content*@
            @*--------------------------------------------------*@
            <div class="main-content-container">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span class="fa-stack">
                            <i class="fa fa-fw fa-table "></i>
                        </span>
                        Displaying @Model.Count() of @ViewBag.Data.TotalItemCount Records
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-info clearfix">
                            <div class="row">
                                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                                {
                                    <div class="col-md-3">
                                        <div class="input-group add-on">
                                            @Html.TextBox("term", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                                            <div class="input-group-btn btn-group">
                                                <button class="btn btn-primary" type="submit"><i class="fa -fa-fw fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="col-md-3">
                                    <a href="@Url.Action("Create", "User")" class="btn btn-success"><span class="fa fa-fw fa-plus"></span><span> New</span></a>
                                </div>
                                <div class="col-md-6">
                                    <div class="paging-container">
                                        <div class="pull-right">
                                            @Html.PagedListPager((IPagedList)ViewBag.Data, page => Url.Action("Index", new { page }), new PagedListRenderOptions { UlElementClasses = new[] { "pagination" }, MaximumPageNumbersToDisplay = 10 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (Model.Any())
                        {
                            <div class="table-container">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover table-condensed" style="margin-bottom: 0px;">
                                        <thead>
                                        <tr>
                                            <th class="col-md-3">ID</th>
                                            <th class="col-md-2">UserName</th>
                                            <th class="col-md-2">Alias</th>
                                            <th class="col-md-3">Email</th>
                                            <th class="col-md-1 text-center">Roles</th>
                                            <th class="col-md-1 text-center">Login</th>
                                            <th class=""></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in Model)
                                            {
                                                <tr>
                                                    <td class="vert-align text-uppercase">@i.UserId</td>
                                                    <td class="vert-align">@i.UserName</td>
                                                    <td class="vert-align">@i.UserAlias</td>
                                                    <td class="vert-align">@i.EmailAddress</td>
                                                    <td class="vert-align text-center">
                                                        @if (i.UserRoleCount > 0)
                                                        {
                                                            <span class="label label-success">@i.UserRoleCount</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-danger">@i.UserRoleCount</span>
                                                        }
                                                    </td>
                                                    <td class="vert-align text-center">
                                                        @if (i.LoginEnabled)
                                                        {
                                                            <span class="fa fa-fw fa-check text-success"></span>
                                                        }
                                                        else
                                                        {
                                                            <span class="fa fa-fw fa-times text-danger"></span>
                                                        }
                                                    </td>
                                                    <td class="vert-align">
                                                        <a href="@Url.Action("Detail", "User", new {id = i.UserId})" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Detail"><span class="fa fa-fw fa-info"></span><span class="hidden-xs hidden-sm hidden-md hidden-lg"> Detail</span></a>
                                                        <a href="@Url.Action("Edit", "User", new {id = i.UserId})" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Edit"><span class="fa fa-fw fa-pencil"></span><span class="hidden-xs hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                                        <a href="@Url.Action("Delete", "User", new {id = i.UserId})" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Delete"><span class="fa fa-fw fa-trash"></span><span class="hidden-xs hidden-sm hidden-md hidden-lg"> Delete</span></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @*--------------------------------------------------*@
            @*end: main content*@
            @*--------------------------------------------------*@
        </div>
    </div>
</div>
@section scripts
{

}