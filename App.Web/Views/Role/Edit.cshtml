@model App.Web.Lib.ViewModels.RoleVm.Edit
@{
    ViewBag.Title = "Edit Role";
}
<div class="page-container">
    <div class="container-fluid">
        <div class="body-content">
            @Html.Partial("_Alert")
            <div class="well well-sm clearfix">
                <p class="pull-left page-title">@ViewBag.Title</p>
                <p class="pull-right page-info">@*empty*@</p>
            </div>
            @*--------------------------------------------------*@
            @*begin: main content*@
            @*--------------------------------------------------*@
            <div class="main-content-container">
                <div class="row">
                    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-6 col-centered">
                        @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.RoleId)
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <span class="fa-stack">
                                        <i class="fa fa-fw fa-pencil "></i>
                                    </span>
                                    Edit Role
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.RoleName)
                                            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.RoleName, string.Empty, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.RoleDescription)
                                            @Html.TextAreaFor(m => m.RoleDescription, new { @class = "form-control", rows = 6 })
                                            @Html.ValidationMessageFor(m => m.RoleDescription, string.Empty, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer clearfix">
                                    <div class="form-group">
                                        <div class="pull-right">
                                            <a href="@Url.Action("Index", "Role")" class="btn btn btn-primary"><span class="fa fa-fw fa-arrow-left"></span><span> Cancel</span></a>
                                            <a href="@Url.Action("Detail", "Role", new { id = @Model.RoleId })" class="btn btn btn-primary"><span class="fa fa-fw fa-info"></span><span> Detail</span></a>
                                            <a href="@Url.Action("Delete", "Role", new { id = @Model.RoleId })" class="btn btn btn-danger"><span class="fa fa-fw fa-trash"></span><span> Delete</span></a>
                                            <button type="submit" class="btn btn-success"><span class="fa fa-fw fa-save"></span> Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @*--------------------------------------------------*@
            @*end: main content*@
            @*--------------------------------------------------*@
        </div>
    </div>
</div>
@section scripts
{

}