@model App.Web.Lib.ViewModels.SystemRoleVm.Detail
@{
    ViewBag.Title = "Role Detail";
}
<div class="page-container">
    <div class="container-fluid">
        <div class="body-content">
            @Html.Partial("_Alert")
            <div class="well well-sm clearfix">
                <p class="pull-left page-title">@ViewBag.Title</p>
                <p class="pull-right page-info">@*empty*@</p>
            </div>
            @*--------------------------------------------------*@
            @*begin: main content*@
            @*--------------------------------------------------*@
            <div class="main-content-container">
                <div class="row">
                    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-6 col-centered">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <span class="fa-stack">
                                    <i class="fa fa-fw fa-info "></i>
                                </span>
                                Role Detail
                            </div>
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <div>
                                        @Html.LabelFor(m => m.SystemRoleId)
                                        <div class="alert alert-info text-uppercase">
                                            <p>@Model.SystemRoleId</p>
                                        </div>
                                    </div>
                                    <div>
                                        @Html.LabelFor(m => m.RoleName)
                                        <div class="alert alert-info">
                                            <p>@Model.RoleName</p>
                                        </div>
                                    </div>
                                    <div>
                                        @Html.LabelFor(m => m.RoleDescription)
                                        <div class="alert alert-info">
                                            <p>@Model.RoleDescription</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">
                                            <span class="fa-stack">
                                                <i class="fa fa-fw fa-users "></i>
                                            </span>
                                            Role Users (@Model.RoleUsersDetail.Count)
                                        </div>
                                        <div class="list-group">
                                            @if (@Model.RoleUsersDetail.Any())
                                            {
                                                foreach (var i in Model.RoleUsersDetail)
                                                {
                                                    <a href="@Url.Action("Detail", "User", new {id = @i.SystemUserId})" class="list-group-item"><span class="fa fa-fw fa-caret-right"></span><span> @i.UserName</span></a>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer clearfix">
                                <div class="form-group">
                                    <div class="pull-right">
                                        <a href="@Url.Action("Index", "Role")" class="btn btn btn-primary"><span class="fa fa-fw fa-chevron-left"></span><span> Cancel</span></a>
                                        <a href="@Url.Action("Edit", "Role", new { id = @Model.SystemRoleId })" class="btn btn btn-primary"><span class="fa fa-fw fa-pencil"></span><span> Edit</span></a>
                                        <a href="@Url.Action("Delete", "Role", new {id = @Model.SystemRoleId})" class="btn btn btn-danger"><span class="fa fa-fw fa-trash"></span><span> Delete</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*--------------------------------------------------*@
            @*end: main content*@
            @*--------------------------------------------------*@
        </div>
    </div>
</div>
@section scripts
{

}